<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/dongtai_list_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/replaceable_finished"
                android:background="@drawable/dongtai_status_finished"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="25dp"
                android:layout_width="90dp"
                android:layout_height="40dp">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_done_green_18dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:textColor="@color/pureLightGreen"
                    android:text="已完成"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/replaceable_onit"
                android:visibility="gone"
                android:background="@drawable/dongtai_status_onit"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="25dp"
                android:layout_width="90dp"
                android:layout_height="40dp">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_onit_yellow_18dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:textColor="@color/pureOrange"
                    android:text="进行中"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
               android:visibility="gone"
                android:id="@+id/replacable_unfinished"
                android:background="@drawable/dongtao_status_unfinished"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="25dp"
                android:layout_width="90dp"
                android:layout_height="40dp">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_close_red"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:textColor="@color/pureRed"
                    android:text="已逾期"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userAvatar"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="65dp"
            android:layout_height="65dp" />
        <TextView
            android:id="@+id/userName"
            android:layout_toRightOf="@+id/userAvatar"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="15dp"
            android:text="我是十个字以内的昵称"
            android:textColor="@color/pureWhite"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dongtaiTime"
            android:layout_below="@+id/userName"
            android:layout_toRightOf="@id/userAvatar"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:text="2016年1月25日"
            android:textColor="@color/pureGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_height="100dp">
        <TextView
            android:id="@+id/userDongtaiContent"
            android:text="AAAAAAAAAAAAAAAAAAAAAAAAAAA"
            android:textColor="@color/pureGray"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/favor_or_not1"
            android:alpha="0.5"
            android:src="@mipmap/ic_favorite_border_white_18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="165dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/likeNumbers"
            android:layout_toRightOf="@+id/favor_or_not1"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="12dp"
            android:text="11"
            android:textSize="15dp"
            android:textColor="@color/pureGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/comments"
            android:alpha="0.5"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="165dp"
            android:src="@mipmap/ic_chat_bubble_outline_black_18dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:id="@+id/commentNumbers"
            android:layout_toRightOf="@+id/favor_or_not1"
            android:layout_marginTop="165dp"
            android:layout_marginLeft="80dp"
            android:text="9"
            android:textSize="15dp"
            android:textColor="@color/pureGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dongtai_deadline_string"
            android:alpha="0.5"
            android:textColor="@color/pureWhite"
            android:layout_marginTop="165dp"
            android:layout_toLeftOf="@+id/dongtaiDeadlineDate"
            android:text="截止日期： "
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dongtaiDeadlineDate"
            android:alpha="0.5"
            android:layout_alignParentRight="true"
            android:layout_marginTop="165dp"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:text="2016年4月1日"
            android:textColor="@color/pureWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>